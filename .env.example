# BR10 Block Web - Variáveis de Ambiente
# Copie este arquivo para .env e ajuste os valores

# Flask
FLASK_ENV=development
SECRET_KEY=sua_chave_secreta_aqui_mude_em_producao
DEBUG=True
HOST=0.0.0.0
PORT=8084

# PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=br10blockweb
DB_USER=br10user
DB_PASSWORD=br10pass
# Ou use DATABASE_URL diretamente:
# DATABASE_URL=postgresql://br10user:br10pass@localhost:5432/br10blockweb

# Redis
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Cache TTL (em segundos)
CACHE_TTL_DOMAINS=300
CACHE_TTL_STATS=60
CACHE_TTL_CLIENTS=120

# Sessão
SESSION_LIFETIME_HOURS=24

# Upload
MAX_CONTENT_LENGTH=16777216

# API
API_RATE_LIMIT=100

# Unbound
UNBOUND_ZONE_FILE=/var/lib/unbound/br10block-rpz.zone
BLOCKED_DOMAINS_PATH=/var/lib/br10api/blocked_domains.txt

# Logging
LOG_LEVEL=INFO
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Backup
BACKUP_ENABLED=True
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7
